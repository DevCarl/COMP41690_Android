<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <MultiSelectListPreference
        android:key="@string/pref_persistent_storage"
        android:title="Preferences"
        android:summary="The preference set here will be used to modify our recommender system to allow us to improve our service"
        android:entries="@array/preferences_array"
        android:entryValues="@array/preferences_values"/>

    <EditTextPreference
        android:title="Location"
        android:key="location"
        android:defaultValue="Dublin"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:key="pref_no_pages"
        android:title="Results To Display"
        android:summary="Choose how many results you would like to see for your searches."
        android:entries="@array/no_pages"
        android:entryValues="@array/no_pages"
        android:defaultValue="10"/>

</PreferenceScreen>